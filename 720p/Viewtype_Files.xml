					<posx>0</posx>
					<posy>5</posy>
					<width>750</width>
					<height>90</height>
					<aligny>center</aligny>
					<font>Font_ListTitleBigger</font>
					<textcolor>ListTitleF</textcolor>
					<label>$INFO[ListItem.Label]</label>
					<visible>Container.Content(files) | [IsEmpty(ListItem.Title) + !Container.Content(artists) + !Container.Content(albums) + !Container.Content(songs)]</visible>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>8</posy>
					<width>750</width>
					<height>25</height>
					<aligny>center</aligny>
					<font>Font_ListTitleBig</font>
					<textcolor>ListTitleF</textcolor>
					<label>$INFO[ListItem.Title]</label>
					<visible>!IsEmpty(ListItem.Title) + Window.IsActive(25) + !Container.Content(episodes)</visible>
					<animation effect="slide" start="0,8" end="0,8" time="0" condition="Container.Content(tvshows)">Conditional</animation>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>8</posy>
					<width>750</width>
					<height>25</height>
					<aligny>center</aligny>
					<font>Font_ListTitleBig</font>
					<textcolor>ListTitleF</textcolor>
					<label>$INFO[ListItem.Episode]. $INFO[ListItem.Title]</label>
					<visible>!IsEmpty(ListItem.Title) + Window.IsActive(25) + Container.Content(episodes)</visible>
				</control>
				<control type="label">
					<posx>0</posx>
					<posy>38</posy>
					<width>750</width>
					<height>17</height>
					<aligny>center</aligny>
					<font>Font_ListDetail</font>
					<textcolor>ListTitleF</textcolor>
					<label>$INFO[ListItem.Genre]</label>
					<visible>!IsEmpty(ListItem.Genre) + Window.IsActive(25) + !Container.Content(seasons)</visible>
					<animation effect="slide" start="0,8" end="0,8" time="0" condition="Container.Content(tvshows)">Conditional</animation>
				</control>
				<control type="textbox">
					<posx>0</posx>
					<posy>32</posy>
					<width>550</width>
					<height>54</height>
					<font>Font_EpisodePlot</font>
					<textcolor>EpisodePlot</textcolor>
					<label>$INFO[ListItem.Plot]</label>
					<autoscroll time="3000" delay="4000" repeat="5000">Skin.HasSetting(autoscroll)</autoscroll>
					<visible>!IsEmpty(ListItem.Plot) + Window.IsActive(25) + Container.Content(episodes)</visible>
				</control>
				<control type="image">
					<posx>0</posx>
					<posy>58</posy>
					<width>121</width>
					<height>22</height>
					<texture>$INFO[ListItem.StarRating]</texture>
					<visible>[Window.IsActive(25)+ ![Container.Content(seasons) | Container.Content(episodes)]]| | Window.IsActive(502)</visible>
					<animation effect="slide" start="0,8" end="0,8" time="0" condition="Container.Content(tvshows)">Conditional</animation>
				</control>
			<!-- Programs -->
				<control type="group">
					<visible>Window.IsActive(1)</visible>
					<control type="label">
						<posx>0</posx>
						<posy>40</posy>
						<width>750</width>
						<height>25</height>
						<aligny>center</aligny>
						<font>Font_ListTitleBigger</font>
						<textcolor>ListTitleF</textcolor>
						<label>$INFO[ListItem.Label]</label>
						<animation effect="slide" start="0,-15" end="0,-15" time="0" condition="!IsEmpty(ListItem.Label2)">Conditional</animation>
					</control>
					<control type="label">
						<posx>0</posx>
						<posy>55</posy>
						<width>750</width>
						<height>25</height>
						<font>Font_ListTitleBig</font>
						<textcolor>ListTitleF</textcolor>
						<label>$INFO[ListItem.Label2]</label>
					</control>
				</control>
		<!-- Music -->
			<!-- Artist -->
				<control type="group">
					<visible>Container.Content(artists)</visible>
					<control type="label">
						<posx>0</posx>
						<posy>10</posy>
						<width>750</width>
						<height>25</height>
						<aligny>center</aligny>
						<font>Font_ListTitleBig</font>
						<textcolor>ListTitleF</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
					<control type="textbox">
						<posx>0</posx>
						<posy>35</posy>
						<width>750</width>
						<height>60</height>
						<font>Font_ListDetail</font>
						<textcolor>ListTitleF</textcolor>
						<label fallback="31425">$INFO[ListItem.Property(description)]</label>
					</control>
				</control>
			<!-- Album -->
				<control type="group">
					<visible>Container.Content(albums)</visible>
					<control type="label">
						<posx>0</posx>
						<posy>5</posy>
						<width>750</width>
						<height>90</height>
						<aligny>center</aligny>
						<font>Font_ListTitleBigger</font>
						<textcolor>ListTitleF</textcolor>
						<label>$INFO[ListItem.Label]</label>
						<visible>IsEmpty(ListItem.Album)</visible>
					</control>
					<control type="label">
						<posx>0</posx>
						<posy>15</posy>
						<width>750</width>
						<height>25</height>
						<aligny>center</aligny>
						<font>Font_ListTitleBig</font>
						<textcolor>ListTitleF</textcolor>
						<label>$INFO[ListItem.Album]</label>
					</control>
					<control type="label">
						<posx>0</posx>
						<posy>45</posy>
						<width>750</width>
						<height>17</height>
						<aligny>center</aligny>
						<font>Font_ListDetail</font>
						<textcolor>ListTitleF</textcolor>
						<label>[B]$LOCALIZE[515]:[/B] $INFO[ListItem.Genre]</label>
						<visible>!IsEmpty(ListItem.Album)</visible>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>65</posy>
						<width>121</width>
						<height>22</height>
						<texture>$INFO[ListItem.StarRating]</texture>
						<visible>!IsEmpty(ListItem.Album)</visible>
					</control>
				</control>
			<!-- Song -->
				<control type="group">
					<visible>Container.Content(songs) | Window.IsActive(500) | [ Window.IsActive(502)+!Container.Content(artists) + !Container.Content(albums) + !Container.Content(songs)]</visible>
					<control type="label">
						<posx>0</posx>
						<posy>5</posy>
						<width>750</width>
						<height>90</height>
						<aligny>center</aligny>
						<font>Font_ListTitleBigger</font>
						<textcolor>ListTitleF</textcolor>
						<label>$INFO[ListItem.Label]</label>
						<visible>IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="label">
						<posx>0</posx>
						<posy>15</posy>
						<width>750</width>
						<height>25</height>
						<aligny>center</aligny>
						<font>Font_ListTitleBig</font>
						<textcolor>ListTitleF</textcolor>
						<label>$INFO[ListItem.TrackNumber]. $INFO[ListItem.Title]</label>
						<visible>!IsEmpty(ListItem.Title)</visible>
						<animation effect="slide" start="0,-10" end="0,-10" time="0" condition="Window.IsActive(500) | [ Window.IsActive(502)+!Container.Content(artists) + !Container.Content(albums) + !Container.Content(songs)]">Conditional</animation>
					</control>
					<control type="label">
						<posx>0</posx>
						<posy>35</posy>
						<width>750</width>
						<height>17</height>
						<aligny>center</aligny>
						<font>Font_ListDetail</font>
						<textcolor>ListTitleF</textcolor>
						<label>[B]Album:[/B] $INFO[ListItem.Album]</label>
						<visible>[Window.IsActive(500) | [ Window.IsActive(502)+!Container.Content(artists) + !Container.Content(albums) + !Container.Content(songs)]]+!IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="label">
						<posx>0</posx>
						<posy>45</posy>
						<width>750</width>
						<height>17</height>
						<aligny>center</aligny>
						<font>Font_ListDetail</font>
						<textcolor>ListTitleF</textcolor>
						<label>[B]Artist:[/B] $INFO[ListItem.Artist]</label>
						<visible>!IsEmpty(ListItem.Title)</visible>
						<animation effect="slide" start="0,10" end="0,10" time="0" condition="Window.IsActive(500) | [ Window.IsActive(502)+!Container.Content(artists) + !Container.Content(albums) + !Container.Content(songs)]">Conditional</animation>
					</control>
					<control type="label">
						<posx>0</posx>
						<posy>65</posy>
						<width>750</width>
						<height>17</height>
						<aligny>center</aligny>
						<font>Font_ListDetail</font>
						<textcolor>ListTitleF</textcolor>
						<label>[B]Duration:[/B] $INFO[ListItem.Duration]</label>
						<visible>!IsEmpty(ListItem.Title)</visible>
						<animation effect="slide" start="0,10" end="0,10" time="0" condition="Window.IsActive(500) | [ Window.IsActive(502)+!Container.Content(artists) + !Container.Content(albums) + !Container.Content(songs)]">Conditional</animation>
					</control>
				</control>
			</focusedlayout>
		</control>
		<control type="group">
			<visible>Skin.HasSetting(File_View_Focus_Line) + Control.IsVisible(55)</visible>
			<posx>0</posx>
