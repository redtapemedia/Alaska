<includes>

	<include name="Viewtype_Poster">

<!-- Browser -->
	
		<control type="wraplist" id="50">
			<posx>-188</posx>
			<posy>65</posy>
			<height>515</height>
			<width>1656</width>
			<onleft>300</onleft>
			<onright>300</onright>
			<onup>7000</onup>
			<ondown>7000</ondown>			
