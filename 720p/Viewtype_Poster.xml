<!--Alaska-->

<includes>

	<include name="Viewtype_Poster">

		<!-- Browser -->

		<control type="wraplist" id="50">
			<posx>-188</posx>
			<posy>65</posy>
			<height>515</height>
			<width>1656</width>
			<onleft>300</onleft>
			<onright>300</onright>
			<onup>7000</onup>
			<ondown>7000</ondown>			
			<viewtype label="Poster">list</viewtype>
			<orientation>horizontal</orientation>
			<scrolltime>200</scrolltime>
			<focusposition>4</focusposition>
			<scrolltime>200</scrolltime>
			<include>Animation_ZoomInZoomOut</include>
			<include>Animation_ZoomedByMenu</include>
			<visible>!Container.Content(episodes)</visible>
			<itemlayout width="168" height="245">
				<control type="image">
					<posx>1</posx>
					<posy>131</posy>
					<width>162</width>
					<height>241</height>
					<texture>postermatteNF.png</texture>
					<include>Animation_HiddenByInfo</include>
				</control>			
				<control type="image">
					<posx>1</posx>
					<posy>131</posy>
					<width>162</width>
					<height>241</height>
					<texture diffuse="postermatteNF.png">$INFO[ListItem.Icon]</texture>
					<fadetime>200</fadetime>
					<colordiffuse>89FFFFFF</colordiffuse>
					<aspectratio scalediffuse="false">stretch</aspectratio>	
					<include>Animation_HiddenByInfo</include>				
				</control>
				<control type="image">
					<posx>0</posx>
					<posy>130</posy>
					<width>164</width>
					<height>243</height>
					<texture>posterframeNF.png</texture>
					<include>Animation_HiddenByInfo</include>					
				</control>
				<control type="image">
					<posx>1</posx>
					<posy>373</posy>
					<width>162</width>
					<height>241</height>
					<texture flipy="true" diffuse="postermatteNF_reflect.png">$INFO[ListItem.Icon]</texture>
					<fadetime>200</fadetime>
					<colordiffuse>89FFFFFF</colordiffuse>					
					<aspectratio scalediffuse="false">stretch</aspectratio>
					<include>Animation_HiddenByInfo</include>
				</control>
				<control type="image">
					<posx>2</posx>
					<posy>132</posy>
					<width>25</width>
					<height>25</height>
					<visible>!Skin.HasSetting(nomovieoverlays) + !IsEmpty(ListItem.Overlay)</visible>
					<info>ListItem.Overlay</info>
					<colordiffuse>89FFFFFF</colordiffuse>
					<include>Animation_HiddenByInfo</include>
				</control>						
			</itemlayout>
			<focusedlayout width="328" height="515">
				<control type="image">
					<posx>2</posx>
					<posy>20</posy>
					<width>320</width>
					<height>476</height>
					<texture diffuse="postermatte.png">$INFO[ListItem.Icon]</texture>
					<fadetime>200</fadetime>					
					<aspectratio scalediffuse="false">stretch</aspectratio>
					<include>Animation_PosterInfoSlide</include>
					<animation type="Focus" reversible="false">
						<effect type="zoom" center="160,238" start="51" end="100" time="600" tween="back" easing="out" />
					</animation>
				</control>
				<control type="image">
					<posx>-18</posx>
					<posy>0</posy>
					<width>359</width>
					<height>515</height>
					<texture>posterframeF.png</texture>
					<include>Animation_PosterInfoSlide</include>					
					<animation type="Focus" reversible="false">
						<effect type="zoom" center="180,258" start="51" end="100" time="600" tween="back" easing="out" />
						<effect type="fade" start="0" end="100" time="600" />
					</animation>					
				</control>
				<control type="image">
					<posx>12</posx>
					<posy>30</posy>
					<width>40</width>
					<height>40</height>
					<visible>!Skin.HasSetting(nomovieoverlays) + !IsEmpty(ListItem.Overlay)</visible>
					<info>ListItem.Overlay</info>
					<include>Animation_PosterInfoSlide</include>					
					<animation type="Focus" reversible="false">
						<effect type="zoom" center="180,258" start="51" end="100" time="600" tween="back" easing="out" />
						<effect type="fade" start="0" end="100" time="600" />
					</animation>
				</control>

				<!-- Browser label and flags -->

				<control type="group">
					<include>Animation_SlideUpFadeOut</include>
					<include>Animation_HiddenByInfo</include>
					<include>Animation_ZoomedByMenu</include>			
					<control type="label">
						<posx>355</posx>
						<posy>392</posy>
						<width>370</width>
						<height>50</height>
						<aligny>center</aligny>
						<font>Font_PosterTitle</font>
						<textcolor>PosterTitle</textcolor>
						<info>ListItem.Label</info>
						<visible>!Container.Content(seasons)</visible>
					</control>
					<control type="label">
						<posx>355</posx>
						<posy>386</posy>
						<width>395</width>
						<font>Font_PosterTitle</font>
						<textcolor>PosterTitle</textcolor>
						<label>$INFO[ListItem.TVShowTitle][CR]$INFO[ListItem.Label]</label>
						<visible>Container.Content(seasons)</visible>
					</control>			
				</control>

			</focusedlayout>

		</control>

		<include>PosterMediaFlags</include>

	</include>

</includes>
