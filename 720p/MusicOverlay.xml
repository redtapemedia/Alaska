<!--Alaska-->

<window id="2004">

	<defaultcontrol>-</defaultcontrol>

	<animation type="WindowOpen">
		<effect type="slide" start="-200,0" end="0,0" time="600" tween="cubic" easing="out" />
		<effect type="fade" start="0" end="100" time="600" />
	</animation>
	<animation type="WindowClose">
		<effect type="slide" start="0,0" end="-200,0" time="600" tween="cubic" easing="out" />
		<effect type="fade" start="100" end="0" time="600" />
	</animation>

	<controls>

		<control type="label">
			<include>WindowID</include>
			<label>MusicOverlay.xml</label>
			<visible>Skin.HasSetting(debugmode)</visible>
		</control>
		
		<control type="group">
			<posx>30</posx>
			<posy>490</posy>
			<control type="image">
				<width>166</width>
				<height>166</height>
				<texture>black.png</texture>
				<colordiffuse>19FFFFFF</colordiffuse>
			</control>
			<control type="image">
				<posx>2</posx>
				<posy>2</posy>
				<width>162</width>
				<height>162</height>
				<texture>$INFO[MusicPlayer.Cover]</texture>
			</control>
			<control type="label">
				<posx>177</posx>
				<posy>105</posy>
				<width>1034</width>
				<font>Font_NowPlayingTrack</font>
				<label>$INFO[MusicPlayer.Title]</label>
				<textcolor>NowPlayingTrack</textcolor>
			</control>
			<control type="label">
				<posx>177</posx>
				<posy>131</posy>
				<width>1034</width>
				<font>Font_NowPlayingArtist</font>
				<label>[B]$INFO[MusicPlayer.Artist][/B] $INFO[MusicPlayer.Album]</label>
				<textcolor>NowPlayingArtist</textcolor>
			</control>
		</control>

		<include>Object_DebugGrid</include>

	</controls>
	
</window>